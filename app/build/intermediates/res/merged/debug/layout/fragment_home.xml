<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.utilities.sanidhya.codingninjas.HomeFragment">


    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/home_image_slider"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="left|top"
        app:pager_animation="Fade"
        app:pager_animation_span="1100"
        />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:id="@+id/home_about_us_card_view"
        android:layout_below="@+id/home_image_slider">

        <TextView
            android:id="@+id/home_about_us"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:text="Our instructors, - graduates from Stanford University, IITs, IIITs
     - are Master craftsmen with years of industry experience at Facebook, Amazon,
     American Express, Times Internet etc. At Coding Ninjas, our mission is to
     continuously innovate the best ways to train the next generation of developers
      and to transform the way tech education is delivered. Weâ€™re constantly evolving
       the ways in which we train amazing developers, and staying stagnant is not an option.
        We approach our educational philosophy as a never-ending journey of self-improvement,
        and we apply that to everything we do."
            android:textSize="10dp" />
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/home_about_us_card_view"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/home_puzzle_iv"
            android:src="@drawable/puzzles"

            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/home_events_iv"
            android:src="@drawable/events" />
    </LinearLayout>
</RelativeLayout>
